//Creazione della classe
class PoligonoRegolare {
	private:
		int NumeroLati;
		double MisuraLati;
	//Defenizione metodi
	public:
		PoligonoRegolare();
		PoligonoRegolare(int);
		int getNumeroLati();
		void setNumeroLati(double);
		double getMisuraLati();
		void setMisuraLati(double);
		double Perimetro();
};
//Creazione della sottoclasse 1
class TriangoloEquilatero:public PoligonoRegolare{
	private: 
		double Altezza;
	//Defenizione metodi
	public:
		TriangoloEquilatero();
		TriangoloEquilatero(int);
		double AreaTriangolo;
};
